<ul>
  <%= link_to user do %>
    <li title="<%= current_user.name %>" class="followed-users">
      <span>
        <%= image_tag avatar_profile(user),
          class: "avatar-news-feed-left" %>
      </span>
      <span>
        <%= truncate user.name, length: Settings.length_names %>
      </span>
    </li>
  <% end %>
</ul>
