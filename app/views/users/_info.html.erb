<div class="user-infomation">
  <div class="info">
    <%= label_tag t("user.info.email") %>
    <%= user.email %>
  </div>

  <div class="info">
    <%= label_tag t("user.info.phone_number") %>
    <%= user.profile.phone_number %>
  </div>

  <div class="info">
    <%= label_tag t("user.info.place_birth") %>
    <%= user.profile.place_birth %>
  </div>

  <div class="info">
    <%= label_tag t("user.info.birthday") %>
    <%= user.profile.birthday %>
  </div>
  <% if current_user.current_user? user %>
    <button class="btn btn-primary user-edit-btn">
      <%= t "user.update.title" %>
    </button>
  <% end %>
  <div class="clearfix"></div>
</div>
